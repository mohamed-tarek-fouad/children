// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Users {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  firstname   String?
  lastname    String?
  email       String    @unique
  password    String?
  phoneNumber String?
  birthDate   String?
  address     Address?
  hashedRt    String?
  picture     String?
  role        UserRole  @default(user)
  provider    Provider?
  baby        Baby[]
}

type Address {
  city String
  area String
}

enum UserRole {
  user
  admin
}

enum Provider {
  google
  facebook
}

type Baby {
  babyName  String
  gender    Gender
  birthDate String
  Weight    Float?
}

enum Gender {
  boy
  girl
}
